  "version": "0.2.0",
  "configurations": [
    {
      "name": "Unittests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "test",
      "program": "${workspaceFolder}/test/bin/Debug/net7.0/test.dll",
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net7.0/village.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Launch (Release)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "release-build",
      "program": "${workspaceFolder}/bin/Release/net7.0/village.dll",
      "args": ["-c", "Release"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}